<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Main Header -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StudySync"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        />

    <!-- Second Header -->
    <TextView
        android:id="@+id/loginSupportTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Support"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/headerTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        />

    <!-- Form fields -->
    <TextView
        android:id="@+id/textIssue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Describe your issue:"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/loginSupportTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/editIssue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Type your issue here"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:gravity="top"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textIssue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contact Information (mandatory):"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editIssue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/editContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter your contact information (email/phone)"
        android:inputType="text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textContact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Submit button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/editContact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Troubleshooting steps -->
    <TextView
        android:id="@+id/textTroubleshooting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Troubleshooting Steps:"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/btnSubmit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textTroubleshooting1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1. Check your internet connection."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textTroubleshooting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textTroubleshooting2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2. Make sure you're using the correct credentials."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textTroubleshooting1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textTroubleshooting3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3. Restart your device."
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textTroubleshooting2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Note -->
    <TextView
        android:id="@+id/textNote"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Note: We will reply back within 24-48 hours."
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textTroubleshooting3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Go Back to Main Activity button -->
    <Button
        android:id="@+id/btnGoBack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Go Back to Main Activity"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textNote"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- StudySync footer -->
    <TextView
        android:id="@+id/textFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Â© 2024 StudySync. All Rights Reserved."
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>